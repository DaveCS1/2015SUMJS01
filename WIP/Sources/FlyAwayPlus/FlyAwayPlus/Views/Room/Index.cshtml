@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Room/room-list.css" rel="stylesheet"/>

<div class="blog-landing">

    @for (int i = 0; i < 10; i++)
    {
        <div class="gurney_hallek_profile_card card">
            <div class="wall-container">
                <img class="wall-pic" src="http://www.transformingourselves.com/Images/Meditation-leaf.jpg" />
            </div>
            <div class="profile">
                <div class="profile-pic-border">
                    <img class="profile-pic" src="http://finalstronghold.com/wp-content/uploads/2012/08/neuromancer-250x250.jpg" />
                </div>
                <h2> Gurney hallek </h2>
                <p>Master at Arms and Grand Stategist for the house atreides. </p>
            </div>
            <div class="social-container">
                <div class=" social seen">
                    <p>
                        <span class="social-icon">i</span>172
                    </p>
                </div>
                <div class=" social middle shared">
                    <p>
                        <span class="social-icon">O</span>34
                    </p>
                </div>
                <div class=" social liked">
                    <p>
                        <span class="social-icon">+</span>210
                    </p>
                </div>
            </div>
        </div>
    }
</div>

<button class="btn btn-primary hidden" data-toggle="modal" data-target="#add-room-modal">Add Room</button>

<!-- Modal -->
<div class="modal fade" id="add-room-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="margin-top: 50px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Room Detail</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="control-label col-md-3" for="roomname">Room Name:</label>
                        <div class="col-md-9">
                            <input class="form-control" id="roomname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="maxslots">No. of slots:</label>
                        <div class="col-md-9">
                            <input class="form-control stepper-input" id="maxslots" min="1" max="20" step="1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="place">Place:</label>
                        <div class="col-md-9">
                            <input class="form-control" id="place">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="starttime">Start time:</label>
                        <div class="col-md-3">
                            <input class="form-control" id="starttime">
                        </div>
                        <label class="control-label col-md-3" for="endtime">End time:</label>
                        <div class="col-md-3">
                            <input class="form-control" id="endtime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="isprivate">Public:</label>
                        <div class="col-md-6">
                            <div class="checkbox">
                                <label class="toggle">
                                    <input type="checkbox" checked="" id="isprivate">
                                    <span class="handle"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-default" style="width: 100%">Invite friends</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg pull-right">CREATE</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer"></div>
        </div>
    </div>
</div>
