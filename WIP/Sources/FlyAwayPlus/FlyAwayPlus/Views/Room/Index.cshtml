@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Room/room-list.css" rel="stylesheet" />

<div class="blog-landing">

    @for (int i = 0; i < 10; i++)
    {
        <div class="room-list-container">
            <div class="room-list-header">
                <div class="room-list-bio" style="background-image:url(/Images/background/nhatrang2.jpg)"><!--BG--></div>
                <div class="room-list-avatarcontainer">
                    <img src="/Images/UserUpload/UserAvatar/item_0_Brother kiss.jpg" alt="avatar" class="room-list-avatar">
                    <div class="room-list-hover">
                        <i class="fa fa-heart"></i>
                    </div>
                </div>
            </div>

            <div class="room-list-content">
                <div class="room-list-place-name">
                    <h3>
                        Da Nang Beautiful Beach
                    </h3>
                </div>
                <div class="divider"></div>
                <div class="room-list-description">
                    Local beaches are good for swimming all year round, but especially from May to August when the waves are gentle.  On some of these beaches, lifeguard teams work from 5am to 8pm daily to ensure the safety of swimmers. 
                </div>

                <div class="room-list-data">
                    <ul>
                        <li>
                            SLOTS<span><i class="room-list-no-current-member">25</i>|32</span>
                        </li>
                        <li>
                            START<span>Dec 22 2015</span>
                        </li>
                        <li>
                            DURING<span>18 days</span>
                        </li>
                    </ul>
                </div>
                <div class="room-list-view-detail">View Detail</div>
            </div>
        </div>
    }
</div>

<button class="btn btn-primary hidden" data-toggle="modal" data-target="#add-room-modal">Add Room</button>

<!-- Modal -->
<div class="modal fade" id="add-room-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="margin-top: 50px">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Room Detail</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="control-label col-md-3" for="roomname">Room Name:</label>
                        <div class="col-md-9">
                            <input class="form-control" id="roomname">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="maxslots">No. of slots:</label>
                        <div class="col-md-9">
                            <input class="form-control stepper-input" id="maxslots" min="1" max="20" step="1">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="place">Place:</label>
                        <div class="col-md-9">
                            <input class="form-control" id="place">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="starttime">Start time:</label>
                        <div class="col-md-3">
                            <input class="form-control" id="starttime">
                        </div>
                        <label class="control-label col-md-3" for="endtime">End time:</label>
                        <div class="col-md-3">
                            <input class="form-control" id="endtime">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3" for="isprivate">Public:</label>
                        <div class="col-md-6">
                            <div class="checkbox">
                                <label class="toggle">
                                    <input type="checkbox" checked="" id="isprivate">
                                    <span class="handle"></span>
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <button class="btn btn-default" style="width: 100%">Invite friends</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <button type="submit" class="btn btn-primary btn-lg pull-right">CREATE</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="modal-footer"></div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery.fakecrop.js"></script>
<script>
    var setBlocksit = function () {
        var conWidth = $(".blog-landing").width();
        var gridwidth = 320;
        //alert(conWidth);
        var col = conWidth / gridwidth;
        //alert(col);
        $(".blog-landing").BlocksIt({
            numOfCol: Math.floor(col),
            offsetX: 8,
            offsetY: 8
        });
    };

    $(function () {
        setBlocksit();

        $(".room-list-bio img").fakecrop();
    });

    //window resize
    $(window).resize(function () {
        homeModule.setBlocksit();
    });
</script>