@model FlyAwayPlus.Models.Post

@{
    var userPost = ViewData["userPost"] as FlyAwayPlus.Models.User;
    var user = ViewData["user"] as FlyAwayPlus.Models.User;
    var listComment = ViewData["listComment"] as List<FlyAwayPlus.Models.Comment>;
    var dict = ViewData["dict"] as Dictionary<int, FlyAwayPlus.Models.User>;
}
<script src="~/Scripts/PostPage/postDetail.js" type="text/javascript"></script>
<div class="col-md-8 col-md-offset-2">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="post-area">
                <div class="post-info">
                    <div class="user-avatar">
                        <img src="@userPost.avatar" alt="@String.Format("{0} {1}", userPost.firstName, userPost.lastName)" class="img-circle" />
                    </div>
                    <div class="post-info-area">
                        <div class="user-name">
                            <a href="/User/Index/@userPost.userID">@String.Format("{0} {1}", userPost.firstName, userPost.lastName)</a>
                    </div>
                    <span class="post-time">
                        <span>Shared with @Model.privacy</span>
                        &nbsp;-&nbsp;
                        <span>@Model.dateCreated</span>
                    </span>

                </div>
            </div>
            <div class="post-content">
                @Model.content
            </div>
        </div>
        <div class="interact-area">
            <a href="#" class="btn-like"><i class="fa fa-thumbs-o-up"></i></a>&nbsp;<b class="like-count">4</b>&nbsp;
            <a href="#" class="btn-dislike"><i class="fa fa-thumbs-o-down"></i></a>&nbsp;<b class="dislike-count">1</b>&nbsp;
            <a href="#" class="btn-people"><i class="fa fa-group"></i></a>&nbsp;<b class="people-count">18</b>
        </div>
        <div class="divide-area"></div>
        <div class="comment-area">
            <div class="comment-stats">
                <span>@listComment.Count comments</span>
            </div>

            <div class="comment-list">
                @foreach (var comment in listComment)
                {
                    var u = @dict[comment.commentID];
                    <div class="comment-detail">
                        <div class="commenter-avatar">
                            <img src="@u.avatar" alt="@String.Format("{0} {1}", u.firstName, u.lastName)" />
                        </div>
                        <div class="commenter-content">
                            <span class="commenter-name"><a href="/User/Index/@u.userID">@String.Format("{0} {1}", u.firstName, u.lastName)</a></span>
                            <span class="commenter-post-time" title="@comment.dateCreated">- @comment.dateCreated</span>
                        </div>
                        <div class="comment-content">
                            @comment.content
                        </div>
                    </div>
                }

                <!--
                <div class="comment-detail">
                    <div class="commenter-avatar">
                        <img src="~/Images/avatar/avatar-2.jpg" alt="Username 2"/>
                    </div>
                    <div class="commenter-content">
                        <span class="commenter-name">Hai Duong</span>
                        <span class="commenter-post-time" title="22:15:28 07-07-2015">- Yesterday 22:15</span>
                    </div>
                    <div class="comment-content">
                        危なくないからその丘で雪の上を滑ろうではないか！
                    </div>
                </div>
                -->
            </div>

            <div class="comment-textbox-wrapper">
                <input type="text" class="comment-textbox" placeholder="Input comment..." />
            </div>
        </div>
    </div>
</div>
</div>