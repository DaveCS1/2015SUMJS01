@model FlyAwayPlus.Models.Post

@{
    var userPost = ViewData["userPost"] as FlyAwayPlus.Models.User;
    var user = ViewData["user"] as FlyAwayPlus.Models.User;
    var listComment = ViewData["listComment"] as List<FlyAwayPlus.Models.Comment>;
    var photo = ViewData["photo"] as FlyAwayPlus.Models.Photo;
    var listFriend = ViewData["listFriend"] as List<FlyAwayPlus.Models.User>;
}
<script src="~/Scripts/PostPage/postDetail.js" type="text/javascript"></script>
<script src="https://connect.facebook.net/en_US/all.js"></script>

<div class="col-md-8 col-md-offset-1" style="margin-top:10px;">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="post-area">
                <div class="post-info">
                    <div class="user-avatar">
                        <img src="@userPost.avatar" alt="@String.Format("{0} {1}", userPost.firstName, userPost.lastName)" class="img-circle" />
                    </div>
                    <div class="post-info-area">
                        <div class="user-name">
                            <a href="/User/Index/@userPost.userID" class="hover-card-user">@String.Format("{0} {1}", userPost.firstName, userPost.lastName)</a>
                        </div>
                        <span class="post-time">
                            <span>Shared with @Model.privacy</span>
                            &nbsp;-&nbsp;
                            <span>@Model.toRealtime()</span>
                        </span>
                    </div>
                </div>
                <div class="post-content" style="display:flex;">
                    <img src="/Images/UserUpload/@photo.url" style="max-height: 100%; margin:auto;" />
                </div>
                <div class="post-content">
                    @Model.content
                </div>
            </div>

            <div class="interact-area">
                <a href="javascript:;" role="@Model.postID" class="btn-like"><span>Like</span></a>
                <a href="javascript:;" role="@Model.postID" class="btn-dislike"><span>Dislike</span></a>
                <a href="javascript:;" id="share_button" class="btn-share"><span>Share</span></a>
                <a href="javascript:;" role="@Model.postID" id="report_button" class="btn-report" data-toggle="modal" data-target="#myModal"><span>Report</span></a>
                
                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Help us to know what's happening</h4>
                            </div>
                            <div class="modal-body">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="row" style="margin-left: 20px">
                                                <div class="radio">
                                                    <label><input type="radio" name="optradio" value="1">This post annoying or unpleasant</label>
                                                </div>
                                            </div>

                                            <div class="row" style="margin-left: 20px">
                                                <div class="radio">
                                                    <label><input type="radio" name="optradio" value="2">I think this post should not appear on FlyAwayPlus</label>
                                                </div>
                                            </div>
                                            
                                            <div class="row" style="margin-left: 20px">
                                                <div class="radio">
                                                    <label><input type="radio" name="optradio" value="3">This post is spam</label>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-dismiss="modal" disabled id="closeBtn">Report</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="divide-area"></div>
            <div class="comment-area">
                <div style="margin: 0 20px 12px">
                    <a href="javascript:;" role="@Model.postID"><i class="fa fa-thumbs-o-up"></i></a>&nbsp;<b class="like-count">@ViewData["likeCount"]</b>&nbsp;
                    <a href="javascript:;" role="@Model.postID"><i class="fa fa-thumbs-o-down"></i></a>&nbsp;<b class="dislike-count">@ViewData["dislikeCount"]</b>&nbsp;
                    <a href="javascript:;" role="@Model.postID"><i class="fa fa-group"></i></a>&nbsp;<b class="people-count">@ViewData["userComment"]</b>
                </div>
                <div class="comment-stats">
                    <span>@listComment.Count comments</span>
                </div>

                <div class="comment-list">
                    @foreach (var comment in listComment)
                    {
                        @Html.Partial("_PostDetailPartial", comment)
                    }
                </div>

                <div class="comment-textbox-wrapper">
                    <textarea id="idTextareaComment" role="@Model.postID" class="comment-textbox" style="height:30px;resize:none" placeholder="Input comment..."></textarea>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-3" style="margin-top:10px;">
    @Html.Partial("_PlaceSuggest", user)
    @Html.Partial("_FriendSuggest", user)
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#share_button').click(function (e) {
            e.preventDefault();
            FB.init({
                appId: '974195839291185',
                status: true,
                xfbml: true
            });
            FB.ui(
            {
                method: 'feed',
                name: '@userPost.firstName' + ' @userPost.lastName',
                link: 'http://localhost:1644/Post/Index/10010#',
                picture: 'http://localhost:1644/Images/UserUpload/'+'@photo.url',
                caption: 'FlyAwayPlus.com',
                description: '@Model.content'
            });
        });

        $('input:radio[name=optradio]').click(function () {
            var checkval = $(this).val();
            $('#closeBtn').prop('disabled', (checkval == null));
            
        });

        $('#closeBtn').click(function (e) {

            var controller = "/User/ReportPost/";
            var data = {
                postID: @Model.postID,
                userReportID: parseInt('@Session["userID"]'),
                userReportedID: @userPost.userID,
                typeReport: $('input[name="optradio"]:checked').val()
            };

            commonModule.callAjax(controller, data, null);

            alert("This user has been reported!");
            e.preventDefault();
        });
        
    });
</script>

<style type="text/css">
    div.inline {
        float: left;
        margin-right: 10px
    }
</style>